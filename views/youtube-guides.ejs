    <script>
        function scrollCarousel(carouselId, direction) {
            const carousel = document.getElementById(carouselId);
            const videoWidth = 365; // Width of video + margin-right
            const scrollAmount = direction * videoWidth * 3; // Scroll 3 videos at a time
            carousel.scrollBy({
                left: scrollAmount,
                behavior: 'smooth'
            });
        }
