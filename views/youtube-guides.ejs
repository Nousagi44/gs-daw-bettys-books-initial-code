            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        /* Navigation Buttons */
        .arrow__btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            color: #fff;
            font-size: 2em;
            cursor: pointer;
            z-index: 100;
            padding: 10px;
